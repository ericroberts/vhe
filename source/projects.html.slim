section
  h1 Recent Project Photos
  ul.gallery
    - Dir.foreach('./source/images/gallery') do |image|
      - next unless image.end_with?('.jpg')
      li= link_to image_tag("thumbs/#{image}"), "/images/gallery/#{image}", class: 'fancybox', rel: 'group'

