section
  h1 Recent Project Photos
  ul.gallery
    - Dir.foreach('./source/images/gallery') do |image|
      - next if image == '.' || image == '..'
      li= link_to image_tag("gallery/#{image}"), "images/gallery/#{image}", class: 'fancybox'

section
  h1 Some of Our Clients
  ul.clients
    - [['dsbn', 'http://www.dsbn.edu.on.ca/'], ['paulboers', 'http://www.paulboers.com/'], ['prins', 'http://www.prinsgrow.com/index2.php'], ['vanderzalm', 'http://www.vanderzalm.ca/'], ['versluis', 'http://www.versluisbrothers.ca/index.html']].each do |client, link|
      li= link_to image_tag("clients/images_clientlogos_#{client}.jpg"), link
